{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus": [2, {
            "allowForLoopAfterthoughts": true
        }],
        "no-continue": "off"
    }
}